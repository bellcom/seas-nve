        <td class="text-right">{{ entity.modernisering | format_amount }}</td>
        <td>{{ 'appbundle.virksomhed_rapport.modernisering.unit' | trans }}</td>
      </tr>
      </tbody>
    </table>

  </div>
{% endblock %}

