<table class="table table-condensed table-header-rotated table-hover">
  <thead>
  <tr>
    {{ helper.header_span('common.generelt', 5) }}
    {{ helper.header_span('nyklimaskaerm.labels.singular', 4) }}
    {{ helper.header_span('common.oekonomi', 7) }}
  </tr>
  <tr>
    {{ helper.header('appbundle.tiltagdetail.tilvalgt') }}
    {{ helper.header('appbundle.nyklimaskaermtiltagdetail.titel') }}
    {{ helper.header('appbundle.nyklimaskaermtiltagdetail.beskrivelse') }}

    {{ helper.header('appbundle.nyklimaskaermtiltagdetail.antalStk') }}
    {{ helper.header('appbundle.nyklimaskaermtiltagdetail.arealM2') }}
    {{ helper.header('appbundle.nyklimaskaermtiltagdetail.uEksWM2K') }}
    {{ helper.header('appbundle.nyklimaskaermtiltagdetail.uNyWM2K') }}

    {{ helper.header('appbundle.nyklimaskaermtiltagdetail.noterTilPrisfaktorValgteLoesningTiltagSpecielleForholdPaaStedet') }}
    {{ helper.header('appbundle.nyklimaskaermtiltagdetail.delprisKrM2') }}
    {{ helper.header('appbundle.nyklimaskaermtiltagdetail.samletInvesteringKr') }}
    {{ helper.header('appbundle.nyklimaskaermtiltagdetail.levetidAar') }}
    {{ helper.header('appbundle.nyklimaskaermtiltagdetail.simpelTilbagebetalingstidAar') }}
    {{ helper.header('appbundle.nyklimaskaermtiltagdetail.nutidsvaerdiSetOver15AarKr') }}

    {{ helper.header() }}
  </tr>
  <tr>
    {{ helper.header_unit('appbundle.tiltagdetail.tilvalgt') }}
    {{ helper.header_unit('appbundle.tiltagdetail.titel') }}
    {{ helper.header_unit('appbundle.tiltagdetail.beskrivelse') }}

    {{ helper.header_unit('appbundle.nyklimaskaermtiltagdetail.antalStk') }}
    {{ helper.header_unit('appbundle.nyklimaskaermtiltagdetail.arealM2') }}
    {{ helper.header_unit('appbundle.nyklimaskaermtiltagdetail.uEksWM2K') }}
    {{ helper.header_unit('appbundle.nyklimaskaermtiltagdetail.uNyWM2K', true) }}

    {{ helper.header_unit('appbundle.nyklimaskaermtiltagdetail.samletInvesteringKr') }}
    {{ helper.header_unit('appbundle.nyklimaskaermtiltagdetail.levetidAar') }}
    {{ helper.header_unit('appbundle.nyklimaskaermtiltagdetail.simpelTilbagebetalingstidAar') }}
    {{ helper.header_unit('appbundle.nyklimaskaermtiltagdetail.nutidsvaerdiSetOver15AarKr') }}

    {{ helper.header_unit() }}
  </tr>
  </thead>
  <tbody>
  {% for detail in entity.details %}
    <tr>
      <td class="{{ detail.tilvalgt | b2class }}">{{ detail.tilvalgt | b2icon }}</td>
      <td>{{ detail.type | trans }}</td>
      <td>{{ detail.placering }}</td>
      <td>{{ detail.noteGenerelt }}</td>
      <td class="border-right">{{ detail.klimaskaerm }}</td>

      <td class="number">{{ detail.antalStk | format_integer }}</td>
      <td class="number">{{ detail.arealM2 | format_decimal }}</td>
      <td class="number">{{ detail.uEksWM2K | format_decimal }}</td>
      <td class="number border-right">{{ detail.uNyWM2K | format_decimal }}</td>

      <td>{{ detail.noterTilPrisfaktorValgteLoesningTiltagSpecielleForholdPaaStedet }}</td>
      <td class="number">{{ detail.klimaskaerm.enhedsprisEksklMoms | format_zeros }}</td>
      <td class="number">{{ detail.samletInvesteringKr | format_amount }}</td>
      <td class="number">{{ detail.levetidAar | format_zeros }}</td>
      <td class="number">{{ detail.samletInvesteringKr | format_amount }}</td>
      <td class="number">{{ detail.nutidsvaerdiSetOver15AarKr | format_amount }}</td>

      <td class="last"></td>
    </tr>
  {% endfor %}
  </tbody>
</table>
