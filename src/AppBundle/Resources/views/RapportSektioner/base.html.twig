<div id="section-{{ section.type }}{{ section.id }}" class="section-{{ section.type }} {% if section.landscape %}landscape{% else %}portrait{% endif %}">
  <div class="row{% if section.break %} page-break-before{% endif %}">
    <div class="col-xs-12">
      {% if section.editUrl and review %}
        <div class="float-right"><a href="{{ section.editUrl }}">edit</a></div>
      {% endif %}
      {% block section -%}
        {% if section.title %}
          {% block section_title -%}
            <span class="section-title">{{ section.title }}</span>
          {% endblock %}
        {% endif %}

        {% block section_content -%}
          {% if section.text %}
            <div class="section-text">
              {{ section.text | raw }}
            </div>
          {% endif %}
        {% endblock %}
      {% endblock %}
    </div>
  </div>
</div>
