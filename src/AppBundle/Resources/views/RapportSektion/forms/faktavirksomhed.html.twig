{% extends 'AppBundle::RapportSektion/forms/standard.html.twig' %}
{% block form_content %}
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{ 'common.generelt' | trans }}</h3>
        </div>
        <div class="panel-body">
          {{ form_row(form.title) }}
          {{ form_row(form.text) }}
          {{ form_row(form.extras.energiForbrugTekst) }}
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{ 'rapportsektion.strings.andendteEnheder' | trans }}</h3>
        </div>
        <div class="panel-body">
          {{ form_row(form.extras.elForbrug) }}
          {{ form_row(form.extras.varmeForbrug) }}
          {{ form_row(form.extras.braendstofForbrug) }}
          {{ form_row(form.extras.afgifterForbrug) }}
          {{ form_row(form.extras.co2Forbrug) }}
          {{ form_row(form.extras.anvendteTekst) }}
          {{ form_row(form.extras.anvendteCo2Tekst) }}
        </div>
      </div>
    </div>
    <div class="col-md-12">
      {{ form_rest(form) }}
    </div>
  </div>
{% endblock %}
