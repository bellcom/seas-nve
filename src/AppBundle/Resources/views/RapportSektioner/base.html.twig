<div class="section-{{ section.type }} {% if section.landscape %}landscape{% else %}portrait{% endif %}">
  <div class="row{% if section.break %} page-break-before{% endif %}">
    <div class="col-xs-12">
      {% if section.edit_url and preview %}
        <div class="float-right"><a href="#">edit</a></div>
      {% endif %}
      {% block section -%}
        {% if section.title %}
          {% block section_title -%}
            <h2 class="section-title">{{ section.title }}</h2>
          {% endblock %}
        {% endif %}

        {% block section_content -%}
          {% if section.text %}
            <div class="section-text">
              {{ section.text }}
            </div>
          {% endif %}
        {% endblock %}
      {% endblock %}
    </div>
  </div>
</div>
