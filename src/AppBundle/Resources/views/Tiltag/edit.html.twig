{% extends 'AppBundle::base.html.twig' %}

{% if heading is not defined %}
  {% set heading = 'tiltag.actions.edit' %}
{% endif %}

{% block body -%}
  {% include 'AppBundle:_includes:calculation_warnings.html.twig' %}

  <div class="row heading">
    <div class="col-md-8">
      <h1>{{ heading | trans }}</h1>
    </div>
    <div class="col-md-4 text-right">
      {% if is_granted('ROLE_RAPPORT_EDIT') %}
        {{ form(delete_form) }}
      {% endif %}
    </div>
  </div>

  {{ form_start(edit_form) }}
  {% block edit_form %}
    {% include 'AppBundle:Tiltag:_form.html.twig' %}
  {% endblock %}

  {{ form_rest(edit_form) }}
  {{ form_end(edit_form) }}
{% endblock %}

{% block documentReady %}
  {{ parent() }}

  {% include 'AppBundle:_includes:textAreaCountdown.js.twig' %}
{% endblock documentReady %}
