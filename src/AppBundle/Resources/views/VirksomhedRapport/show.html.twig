      </tr>
      <tr>
        <th class="indent"></th>
        <td class="text-right"></td>
        <td></td>
        <th>{{ 'appbundle.virksomhed_rapport.besparelseAarEt' | trans }}</th>
        <td class="text-right">{{ entity.besparelseAarEt | format_amount }}</td>
        <td>{{ 'appbundle.virksomhed_rapport.besparelseAarEt.unit' | trans }}</td>
      </tr>
