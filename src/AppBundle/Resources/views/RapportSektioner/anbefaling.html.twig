{% extends 'AppBundle::RapportSektioner/base.html.twig' %}

{% block section_type -%}
  <div class="section-type">{{ section.number }} {{ ('rapportsektion.types.' ~ section.type ) | trans }}</div>
{% endblock %}

{% block section_title -%}
  <h1>{{ section.anbefalingTitle }}</h1>
{% endblock %}

{% block section_content -%}
  {{ parent() }}

  <div class="section-green">
    {% if section.filepath %}
      <div class="section-anbefaling-image">
        <img src="{{ absolute_url(asset(section.filepath)) }}" alt=""/>
      </div>
    {% endif %}
    <div class="section-anbefaling-effect">
      <div class="section-anbefaling-effect-title">Effekt (sparet årligt):</div>
      <div class="row">
        <div class="col-xs-4">
          <h1 class="enlarged">{{ section.potentieltBesparesleCo2 | format_decimal }} <small>ton CO2</small></h1>
        </div>
        <div class="col-xs-4">
          <h1 class="enlarged">{{ section.potentieltBesparesleKr | format_decimal(0) }} <small>kr.</small></h1>
        </div>
        <div class="col-xs-4">
          <h1 class="enlarged">{{ section.potentieltBesparesleKwh | format_decimal(0) }} <small>kWh</small></h1>
        </div>
      </div>
    </div>
    <div class="section-anbefaling-effect-description">
      <div class="row">
        <div class="col-xs-3">Tidsforløb:</div>
        <div class="col-xs-9">{{ section.tidsforloebUger | format_decimal(0) }} uger</div>
      </div>
      <div class="row">
        <div class="col-xs-3">Pris:</div>
        <div class="col-xs-9">{{ section.pris | format_decimal(0) }} kr</div>
      </div>
      <div class="row">
        <div class="col-xs-3">Ressourcer:</div>
        <div class="col-xs-9">{{ section.ressourcertekst | raw }}</div>
      </div>
    </div>
  </div>
  {% if section.tidlsforloebData %}
    <div class="section-anbefaling-tidsforloeb">
      <h2>Tidsforløb</h2>
      <table>
        <tr>
          <td></td>
          {% for week in section.tidlsforloebData %}
            <td>{{ week.label }}</td>
          {% endfor %}
        </tr>
        {% for key,info in section.getTidlsforloebInfo %}
          <tr class="section-anbefaling-ansvarlig-{{ info.omraadeansvar }}">
            <td>{{ info.title }}</td>
            {% for week in section.tidlsforloebData %}
              <td>
                {% if week.rows[key] %}-{% endif %}
              </td>
            {% endfor %}
          </tr>
        {% endfor %}
      </table>
      <div class="section-anbefaling-ansvarlig">
        <span>Områdaansvarlig:</span>
        <span class="color-provider"></span> SEAS-NVE
        <span class="color-company"></span> {{ section.virksomhedOversigtRapport.virksomhed.name }}
        <span class="color-both"></span> Begge
      </div>
    </div>
  {% endif %}
  <div class="section-anbefaling-roi">
    <h2>Simpel tilbagebetalingtid (ROI)</h2>
    <div class="row">
      <div class="col-xs-6">
        {% include 'AppBundle:_includes:graf_roi.html.twig' with { 'chart_data' : section.ROIGrafData  } %}
      </div>
      <div class="col-xs-6">
        <div class="section-anbefaling-green-text">
          <h3>På vej med en grønne profil - vi er med jer hele vejen</h3>
          <p>
            Ønsker I at komme igang med implementering af optimeringer, eller har I spørgsmål,
            så kontakt jeres personlige energirådgiver{% if section.raadgiver %} {{ section.raadgiversName }} på telefon {{ section.telephone }}{% endif %}
          </p>
        </div>
        <div class="section-anbefaling-produktivitet-text">
          {% if section.produktivitetTekst %}
            <p>{{ section.produktivitetTekst }}</p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}
