{% extends 'AppBundle::RapportSektioner/base.html.twig' %}
{% block section_content -%}
  {{ parent() }}
  <div class="section-opsumering-seas-anbefaler">
    <div class="row">
      <div class="col-xs-4">
        <h2>SEAS-NVE anbefaler</h2>
        <p>De tre største potentielle besparelser</p>
      </div>
      <div class="col-xs-8">
        <div class="row">
          {% for key, anbefaling in section.anbefalinger %}
            <div class="col-xs-4">
              {% include 'AppBundle:RapportSektioner:anbefaling-teaser.html.twig' with { 'section' : anbefaling  } %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
  <div class="section-opsumering-samlet-forbrug">
    <h2>Samlet forbrug</h2>
    {% include 'AppBundle:_includes:graf_samletforbrug.html.twig' with { 'chart_data' : section.samletForbrugGrafData  } %}
  </div>
  <div class="section-opsummering-potentielt-besparelse">
    <h2>Potentielt samlet besparelse</h2>
    <div class="box box--samlet-besparelse">
      <div class="row">
        <div class="col-xs-4">
          <h1 class="enlarged">{{ section.potentieltBesparesleKwh | format_decimal(0) }} <small>færre kWh</small></h1>
        </div>
        <div class="col-xs-4">
          <h1 class="enlarged">{{ section.potentieltBesparesleKr | format_decimal(0) }} <small>kr. sparet</small></h1>
        </div>
        <div class="col-xs-4">
          <h1 class="enlarged">{{ section.potentieltBesparesleCo2 | format_decimal }} <small>færre ton CO2</small></h1>
        </div>
      </div>
    </div>
  </div>
  <div class="section-opsumering-roi">
    <h2>Simpel tilbagebetalingtid (ROI)</h2>
    {% include 'AppBundle:_includes:graf_roi.html.twig' with { 'chart_data' : section.ROIGrafData  } %}
  </div>
{% endblock %}
