<div class="row page-break-after">
  <div class="col-xs-12">
    <h2>Kontaktinformation</h2>
  </div>
  <div class="col-xs-12">
    <h3>Kunde</h3>
    <hr>
    <div class="row">
      {% if rapport.virksomhed %}
        <div class="col-xs-4">
          {% if rapport.virksomhed.name %}
            <div>{{ rapport.virksomhed.name }}</div>
          {% endif %}

          {% if rapport.virksomhed.address %}
            <div>{{ rapport.virksomhed.address }}</div>
          {% endif %}

          {% if rapport.virksomhed.postnummer and rapport.virsomhed.byNavn %}
            <div>{{ rapport.virksomhed.postnummer }} {{ rapport.virsomhed.byNavn }}</div>
          {% endif %}
        </div>

        {% for contactPerson in rapport.virksomhed.contactPersons %}
          <div class="col-xs-4">
            {{ include ('AppBundle:ContactPerson:show-embed.html.twig') }}
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>

  {% if rapport.bygning.contactPersons.length %}
    <br>
    <div class="col-xs-12">
      <h3>Analyserede emner</h3>
      <hr>
      <div class="row">
        {% for contactPerson in rapport.bygning.contactPersons %}
          <div class="col-xs-4">
            {{ include ('AppBundle:ContactPerson:show-building-embed.html.twig') }}
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}

  {% if rapport.datering %}
    <br>
    <div class="col-xs-12">
      <h3>Dato for gennemgang</h3>
      <hr>
      <div class="row">
        <div class="col-xs-4">
          {{ rapport.datering | date('d.m.Y') }}
        </div>
      </div>
    </div>
  {% endif %}
</div>
