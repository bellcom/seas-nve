          <td class="text-right">{{ rapport.tilvalgtSum | format_hundreds }}</td>
          <td>{{ 'appbundle.rapport.sumOevrige.unit' | trans }}</td>
        </tr>
        <tr>
          <th>{{ 'appbundle.rapport.genopretningsandel' | trans }}</th>
          <td class="text-right">{{ rapport.genopretning | format_hundreds }}</td>
          <td>{{ 'appbundle.rapport.genopretningsandel.unit' | trans }}</td>
        </tr>
        <tr>
          <th>{{ 'appbundle.rapport.genopretningForImplementeringsomkostninger' | trans }}</th>
          <td class="text-right">{{ rapport.genopretningForImplementeringsomkostninger | format_hundreds }}</td>
          <td>{{ 'appbundle.rapport.genopretningForImplementeringsomkostninger.unit' | trans }}</td>
        </tr>
        <tr>
          <th>{{ 'appbundle.rapport.modernisering' | trans }}</th>
          <td class="text-right">{{ rapport.modernisering | format_hundreds }}</td>
          <td>{{ 'appbundle.rapport.modernisering.unit' | trans }}</td>
        </tr>
        <tr>
          <th>{{ 'appbundle.rapport.nutidsvaerdi' | trans }}</th>
          <td class="text-right">{{ rapport.nutidsvaerdiSetOver15AarKr | format_hundreds }}</td>
