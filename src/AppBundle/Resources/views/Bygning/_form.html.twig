{{ form_start(edit_form, { 'style': 'horizontal' }) }}

{{ form_row(edit_form.buttons) }}

  {{ form_errors(edit_form) }}

<!-- Nav tabs -->
<ul class="nav nav-tabs" role="tablist">
  <li role="presentation" class="active"><a href="#generelt" role="tab" data-toggle="tab">{{ 'common.generelt' | trans }}</a></li>
  <li role="presentation"><a href="#interessenter" role="tab" data-toggle="tab">{{ 'appbundle.bygning.users' | trans }}</a></li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div role="tabpanel" class="tab-pane active" id="generelt">
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">{{ icon('home') }} {{ 'appbundle.bygning.navn' | trans }} / {{ 'appbundle.bygning.adresse' | trans }}</div>
          <div class="panel-body">
            {{ form_row(edit_form.navn) }}
            {{ form_row(edit_form.adresse ) }}
            {{ form_row(edit_form.postnummer ) }}
            {{ form_row(edit_form.postBy ) }}
          </div>
        </div>

        <div class="panel panel-default">
          <div class="panel-heading">{{ icon('briefcase') }} {{ 'appbundle.bygning.virksomhed' | trans }} </div>
          <div class="panel-body">
            <div class="form-group">
              {{ form_label(edit_form.cvrNumber ) }}
              <div class="col-lg-10">
                <div style="padding-bottom: 15px;">
                  <select class="form-control cvr-search">
                    <option value="">{{ 'bygninger.strings.search_by_cvr' | trans }}</option>
                    {% for virksomhed in virksomheder %}
                      <option value="{{ virksomhed.cvrNumber }}" {% if virksomhed.id == entity.virksomhed.id %}selected{% endif %}>{{ virksomhed.name }} ({{ virksomhed.cvrNumber }})</option>
                    {% endfor %}
                  </select>
                </div>
                {{ form_widget(edit_form.cvrNumber, {'attr': {'class': 'task_field', 'data-default-value': entity.cvrNumber }}  ) }}
              </div>
            </div>
            {{ form_row(edit_form.eanNumber ) }}
            {{ form_row(edit_form.pNumber ) }}
          </div>
        </div>
        <div class="panel panel-default">
          <div class="panel-heading">{{ icon('users') }} {{ 'common.personer' | trans }} / {{ 'common.tilknytning' | trans }}</div>
          <div class="panel-body">
            {{ form_row(edit_form.aaplusAnsvarlig ) }}
            {{ form_row(edit_form.projektleder ) }}
            {{ form_row(edit_form.energiRaadgiver ) }}
            {{ form_row(edit_form.projekterende ) }}
            {{ form_row(edit_form.afdelingsnavn ) }}
            <span class="hidden">
              {{ form_row(edit_form.ejerA ) }}
              {{ form_row(edit_form.divisionnavn ) }}
              {{ form_row(edit_form.omraadenavn ) }}
              {{ form_row(edit_form.ejerforhold ) }}
            </span>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">{{ icon('info-circle') }} {{ 'common.data' | trans }}</div>
          <div class="panel-body">
            {{ form_row(edit_form.bygId ) }}
            <span class="hidden">
              {{ form_row(edit_form.enhedsys ) }}
            </span>
            {{ form_row(edit_form.type ) }}
            {{ form_row(edit_form.OpfoerselsAar ) }}
            {{ form_row(edit_form.anvendelse ) }}
            {{ form_row(edit_form.bruttoetageareal ) }}
            {{ form_row(edit_form.erhvervsareal ) }}
            {{ form_row(edit_form.opvarmetareal ) }}
            {{ form_row(edit_form.status ) }}
            <span class="hidden">
              {{ form_row(edit_form.segment ) }}
            </span>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">{{ icon('industry') }} {{ 'forsyningsvaerk.labels.plural' | trans }}</div>
          <div class="panel-body">
            {{ form_row(edit_form.forsyningsvaerkEl ) }}
            {{ form_row(edit_form.forsyningsvaerkVarme ) }}
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">{{ icon('phone') }} {{ 'appbundle.bygning.contactPersons' | trans }}</h3>
          </div>
          <div class="panel-body">
            {{ form_widget(edit_form.contactPersons) }}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div role="tabpanel" class="tab-pane" id="interessenter">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-heading">{{ icon('users') }} {{ 'appbundle.bygning.users' | trans }}</div>
          <div class="panel-body">
            {{ form_row(edit_form.users) }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{ form_rest(edit_form) }}
{{ form_end(edit_form) }}
