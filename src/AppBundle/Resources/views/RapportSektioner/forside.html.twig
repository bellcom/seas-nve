{% extends 'AppBundle::RapportSektioner/base.html.twig' %}
{% block section -%}
  <div class="section section-frontpage--image section--negative-margin">
    {% if section.filepath %}
      <img src="{{ absolute_url(asset(section.filepath)) }}" alt="" />
    {% endif %}
  </div>

  <div class="section section-frontpage--map section--negative-margin">
    <div class="report-intro">
      <div>
        <div class="section-type">{{ section.title }}</div>
      </div>
      <div>
        <span class="report-intro__title">{{ section.virksomhedNavn }}</span>
      </div>
      <div>
        <span class="report-intro__report-type">{{ section.getRapportTypeNavn }}</span>
      </div>
    </div>

    {% if section.address and not section.skjuleKort %}
      <div class="report-map">
        <img alt="" src="https://www.mapquestapi.com/staticmap/v5/map?center={{ section.address }}&zoom=18&size=400,400&key=dmNBHsqexMpt6bWFyuPwWklH10alas5X&locations=={{ section.address }}">
      </div>
    {% endif %}
  </div>

  <div class="section section-frontpage--name">
    <div class="section__undersagsnavn">{{ section.underTekst }}</div>
    <div class="section__date">{{ section.datering | date('d.m.Y') }}</div>
    <div class="section__logo"><img alt="" src="{{ absolute_url(asset('img/seas-nve-logo.png')) }}" height="30px" /></div>
  </div>
{% endblock %}
