{% extends 'AppBundle::RapportSektion/forms/standard.html.twig' %}
{% block form_content %}
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{ 'common.generelt' | trans }}</h3>
        </div>
        <div class="panel-body">
          {{ form_row(form.extras.type) }}
          {% if form.extras.forslageList is empty %}
            <div class="form-group">
              <label class="control-label required">{{ 'appbundle.rapportsektion.anbefaling.extras.forslageList' | trans }}</label>
              <div>
                Der ingen noget forslag med valgt slutanvendelsetype eller anbefaling type er ikke defineret.
              </div>
            </div>
          {% else %}
          <div class="form-group anbefaling-forslage-list">
            <div style="float:right;">
              <a href="#" class="select-all">Tilvalg alle</a>
              <a href="#" class="deselect-all">Fravalg alle</a>
            </div>
          {{ form_label(form.extras.forslageList) }}
          {{ form_widget(form.extras.forslageList) }}
          </div>
          {% endif %}
          {{ form_row(form.title) }}
          {{ form_row(form.text) }}
          {{ form_row(form.extras.tidsforloebuger) }}
          {{ form_row(form.extras.pris) }}
          {{ form_row(form.extras.ressourcertekst) }}
          {{ form_row(form.extras.raadgiver) }}
          {{ form_row(form.extras.telefon) }}
          {{ form_row(form.extras.produktivitetTekst) }}
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">{{ 'rapportsektion.strings.image' | trans }}</h3>
            </div>
            <div class="panel-body">
              {{ form_row(form.imagestandard) }}
              {{ form_row(form.filepath) }}
            </div>
          </div>
        </div>
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">{{ 'rapportsektion.strings.tidsforloeb' | trans }}</h3>
            </div>
            <div class="panel-body">
              {{ form_row(form.extras.tidsforloebinfo) }}
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{ 'common.text_pages' | trans }}</h3>
        </div>
        <div class="panel-body">
          {{ form_row(form.textPages) }}
        </div>
      </div>
      {{ form_rest(form) }}
    </div>
  </div>
{% endblock %}
