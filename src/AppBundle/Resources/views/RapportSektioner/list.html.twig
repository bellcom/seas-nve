{% extends review == false ? 'AppBundle::pdf.html.twig' : 'AppBundle:_includes:rapport_review_container.html.twig' %}

{% block body -%}
  {% for section in sections %}
    {% if section.hideSection %}
      {% if review %}
        {% include 'AppBundle::RapportSektioner/hidden.html.twig' %}
      {% endif %}
    {% else %}
      {% set type = section.type ? section.type : 'base' %}
      {% include 'AppBundle::RapportSektioner/' ~ type ~ '.html.twig' %}
    {% endif %}
  {% endfor %}
{% endblock %}
